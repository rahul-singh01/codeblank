<div class="playlist_box" id="playlist_box_insert" style="
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    font-family: cursive;
    width: 100%;
">
    <div class="playlist_cont" style="
    width: 25%;
    background: black;
    position: absolute;
    left: 0;
    top: 3px;
">
        <h2 style="
    text-align: center;
">Playlists</h2>
        <div class="playlistcontbox" style="
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 80vh;
    background: black;
    overflow-y: scroll;
">


            <% for(i=data.length; i--;){ %>

                <div class="playlist_item" id="<%= data_enc[i] %>">
                    <p onclick="showuserplaylist('<%= data_enc[i] %>')">
                        <%= data[i] %>
                    </p>

                    <div class="deletebutton">
                        <span onclick="userplaylistdelete('<%= data_enc[i] %>')" class="material-icons material-icons-outlined deletebtn">
                            delete
                        </span>
                    </div>
                </div>
                <% } %>


        </div>
    </div>
    <div class="playlistplayer">
        <div class="audbox" id="songplay">
            <div class="moreoptions">
                <div class="addtoplaylist" onclick="addtoWatchlist()">
                    <p title="Add to Playlist">
                        <span class="material-icons-outlined material-icons">playlist_add</span>

                    </p>
                </div>
                <div class="favourites" id="like">
                    <p title="Add to Favourites" onclick="add_to_fav(`61b624678f2b953c308ccb4d`)">
                        <span class="material-icons-outlined material-icons ">favorite_border</span>
                    </p>
                </div>
                <div class="watchlist" id="watchList">
                    <div class="createplaylist">
                        <input type="text" name="createplaylist" id="playlist_create" placeholder="Create a Playlist">
                        <button onclick="createplaylist(`61b624678f2b953c308ccb4d`)"><span
                                class="material-icons-outlined material-icons">playlist_add</span>Create
                            Playlist</button>
                    </div>
                    <div class="playlistcheckbox">
                        <div class="playlistitem" id="insertplaylist">

                        </div>
                    </div>
                    <div class="saveplaylist">
                        <button onclick="closeWatchlist()">Close</button>
                    </div>
                </div>

            </div>
            <div class="audboxmain">
                <div class="audiomain">

                    <div class="titleaud">
                        <div class="title">
                            <p style="font-size: large; ">CodeBlank Audio</p>
                            <p style="font-family: 'Courier New', Courier, monospace; color: rgb(187, 184, 184);"><b style="font-family: monospace; font-size: large;">Artist:</b>
                                <span>Artist</span>
                                <span>•</span>
                                <span>Album Name</span>
                                <span>•</span>
                                <span>Song Duration</span>
                                <span>•</span>
                            </p>
                            <div id="L_btn">

                            </div>

                        </div>
                        <div id="objectdown" class="progress">
                            <audio autoplay="" id="plyr-audio" class="audioplyr" onplay="audion()" onpause="audioff()" ontimeupdate="updateTrackTime(this);">
                                <source id="audiosrc" src=" " type="audio/mpeg">
                                <script>
                                    plyr.setup("#plyr-audio");
                                </script>

                        </div>


                    </div>


                </div>
            </div>
        </div>
        <div id="muxicbox">
            <div class="musicbox" id="dataupdate">
                
            </div>
        </div>

    </div>
</div>
<style>
    .playlist_item {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        width: 80%;
        background: black;
        border: 2px solid rgb(31, 75, 194);
        padding: 10px;
        cursor: pointer;
        z-index: 11;

    }
    .playlist_item:hover{
        background:rgb(31, 75, 194);
    }

    ::-webkit-scrollbar {
        width: 10px;
    }

    /* Track */

    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 5px grey;
        border-radius: 10px;
    }

    /* Handle */

    ::-webkit-scrollbar-thumb {
        background: rgb(31, 75, 194);
        border-radius: 10px;
    }

    /* Handle on hover */

    ::-webkit-scrollbar-thumb:hover {
        background: #044981;
    }

    .audbox {
        position: absolute;
        width: auto !important;
        top: -45px;
        right: 50px;
    }

    .musicbox {
        position: absolute;
        top: 500px;
        right: 50px;
        width: auto !important;
    }

    .playlistcontbox>div {
        margin: 10px;
    }

    .deletebutton {
        padding: 5px;
        border: 2px solid gray;
        border-radius: 5px;
        display: flex;
        cursor: pointer;
    }
    .deletebutton:hover .deletebtn{
        color: red;
    }
</style>

<div class="lyricsaud hidden" id="lyricsbox">
    <div class="close" onclick="hideLyrics() ">
        <i class="fas fa-times md-10"></i>
    </div>

    <div class="lyrics">
        <h2 class="headlyrics">Lyrics</h2>
        <p id="lyrics_txt">
            searching....
        </p>
    </div>
</div>