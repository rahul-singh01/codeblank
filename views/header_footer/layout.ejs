<body>
    <div class="bodycontainer">
        <div class="navbox">
            <div class="iconham" onclick="showHome()">
                <i class="fas fa-bars"></i>
                <!-- <i class="far fa-times-circle"></i> -->
            </div>
            <div class="navcont">
                <div class="navtitle">
                    <p class="companyCode">CodeBlank</p>
                    <p>FileManager</p>
                </div>
                <div class="navlinks">
                    <a href="/">Home</a>
                    <a href="/about">About</a>
                    <a href="/contact-us">Contact</a>
                </div>
                <div class="avlinks">
